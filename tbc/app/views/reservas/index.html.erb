<h1>Listing reservas</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Direccionorigen</th>
      <th>Direccionllegada</th>
      <th>Estado</th>
      <th>Horasalida</th>
      <th>Horallegada</th>
      <th>Ruta</th>
      <th>Distancia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservas.each do |reserva| %>
      <tr>
        <td><%= reserva.fecha %></td>
        <td><%= reserva.direccionOrigen %></td>
        <td><%= reserva.direccionLlegada %></td>
        <td><%= reserva.estado %></td>
        <td><%= reserva.horaSalida %></td>
        <td><%= reserva.horaLlegada %></td>
        <td><%= reserva.ruta %></td>
        <td><%= reserva.distancia %></td>
        <td><%= link_to 'Show', reserva %></td>
        <td><%= link_to 'Edit', edit_reserva_path(reserva) %></td>
        <td><%= link_to 'Destroy', reserva, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

